{
    "name": "figlet-loader",
    "version": "1.1.0",
    "description": "Get your figlet build bundled with webpack, use figlet with webpack easily",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/figlet-loader.git"
    },
    "homepage": "https://github.com/itgalaxy/figlet-loader",
    "keywords": [
        "figlet",
        "webpack",
        "loader"
    ],
    "author": "Itgalaxy <development@itgalaxy.company>",
    "bugs": {
        "url": "https://github.com/itgalaxy/figlet-loader/issues"
    },
    "license": "MIT",
    "main": "index.js",
    "files": [
        "index.js"
    ],
    "dependencies": {
        "figlet": "^1.1.0"
    },
    "devDependencies": {
        "ava": "^0.17.0",
        "ajv-cli": "^1.1.0",
        "babel-preset-es2015": "^6.14.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.14.0",
        "eslint": "^3.14.0",
        "eslint-plugin-ava": "^4.0.0",
        "eslint-plugin-import": "^2.0.0",
        "eslint-plugin-itgalaxy": "^36.0.0",
        "eslint-plugin-jsx-a11y": "^3.0.2",
        "eslint-plugin-lodash": "^2.1.0",
        "eslint-plugin-node": "^3.0.5",
        "eslint-plugin-promise": "^3.0.0",
        "eslint-plugin-react": "^6.2.0",
        "eslint-plugin-unicorn": "^1.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.0",
        "nyc": "^10.0.0",
        "package-schema": "^1.0.0",
        "pify": "^2.3.0",
        "remark-cli": "^2.0.0",
        "remark-lint": "^5.0.0",
        "remark-preset-lint-itgalaxy": "^4.0.0",
        "webpack": "^1.14.0",
        "tmp": "^0.0.31"
    },
    "scripts": {
        "lint:eslint": "eslint . --ignore-path .gitignore --ignore-pattern '**/fixtures/**'",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:remark": "remark . -i .gitignore -q",
        "lint": "npm-run-all -l -p lint:**",

        "ava": "nyc ava --verbose '**/__tests__/*.js'",
        "pretest": "npm run lint",
        "test": "npm run ava",

        "release": "npmpub"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "remarkConfig": {
        "presets": [
            "remark-preset-lint-itgalaxy"
        ]
    },
    "eslintConfig": {
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    }
}
